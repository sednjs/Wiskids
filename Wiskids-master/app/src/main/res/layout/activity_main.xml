<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/leveltest"
        android:layout_width="220dp"
        android:layout_height="80dp"
        android:layout_marginBottom="50dp"
        android:backgroundTint="#E88C04"
        android:text="Level Test"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/level4" />

    <Button
        android:id="@+id/level1"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginStart="58dp"
        android:layout_marginEnd="58dp"
        android:backgroundTint="#1F82D1"
        android:text="Level 1 Counting"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="@+id/level2"
        app:layout_constraintEnd_toStartOf="@+id/level2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/level2"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/level3"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginStart="58dp"
        android:layout_marginEnd="58dp"
        android:backgroundTint="#1F82D1"
        android:text="Level 3 Decimals/Fractions"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="@+id/level4"
        app:layout_constraintEnd_toStartOf="@+id/level4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/level4"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/level4"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginEnd="55dp"
        android:layout_marginBottom="35dp"
        android:backgroundTint="#1F82D1"
        android:text="Level 4 HCF/LCM"
        android:textSize="15sp"
        app:layout_constraintBottom_toTopOf="@+id/leveltest"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/level3"
        app:layout_constraintTop_toBottomOf="@+id/level2" />

    <TextView
        android:id="@+id/logo"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="75dp"
        android:layout_marginTop="45dp"
        android:layout_marginEnd="75dp"
        android:layout_marginBottom="58dp"
        android:gravity="center"
        android:text="Wiskids"
        android:textColor="#1F82D1"
        android:textSize="50sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/level2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/level2"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginEnd="55dp"
        android:layout_marginBottom="36dp"
        android:backgroundTint="#1F82D1"
        android:text="Level 2 Calculation"
        android:textSize="15sp"
        app:layout_constraintBottom_toTopOf="@+id/level4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/level1"
        app:layout_constraintTop_toBottomOf="@+id/logo" />

</androidx.constraintlayout.widget.ConstraintLayout>